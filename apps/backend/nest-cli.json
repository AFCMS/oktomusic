{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "**/*.hbs",
        "outDir": "dist/src"
      },
      {
        "include": "generated/prisma/**",
        "outDir": "dist/src"
      }
    ]
  }
}
